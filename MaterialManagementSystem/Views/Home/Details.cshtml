    <div class="col-md-8 col-sm-12" style="margin:0 0 0 200">


        <div class="portlet red-haze box " id="content">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-cogs"></i>Indent Details
                </div>

            </div>



            <div class="portlet-body">
                <div class="row static-info">
                    <div class="col-md-5 name">
                        <dl>
                            <dt>
                                @Html.DisplayNameFor(model => model.IndentDate):
                            </dt>
                        </dl>
                    </div>
                    <div class="col-md-7 value">
                        <dl>
                            <dd>
                                @Html.DisplayFor(model => model.IndentDate)
                            </dd>
                        </dl>
                    </div>
                </div>
                <div class="row static-info">
                    <div class="col-md-5 name">
                        <dl>
                            <dt>
                                @Html.DisplayNameFor(model => model.Item):
                            </dt>
                        </dl>
                    </div>
                    <div class="col-md-7 value">
                        <dl>
                            <dd>
                                @*@Html.DisplayFor(model => model.Item)*@
                                <ol>
                                    <li>
                                        @Html.Raw(Model.Item.Replace(",", "<br><li>"))
                                    </li>
                                </ol>
                            </dd>
                        </dl>
                    </div>
                </div>
                <div class="row static-info">
                    <div class="col-md-5 name">
                        <dl>
                            <dt>
                                @Html.DisplayNameFor(model => model.Description):
                            </dt>
                        </dl>
                    </div>
                    <div class="col-md-7 value">
                        <dl>
                            <dd>
                                @Html.DisplayFor(model => model.Description)
                            </dd>
                        </dl>
                    </div>
                </div>
                <div class="row static-info">
                    <div class="col-md-5 name">
                        <dl>
                            <dt>
                                @Html.DisplayNameFor(model => model.ItemCode):
                            </dt>
                        </dl>
                    </div>
                    <div class="col-md-7 value">
                        <dl>
                            <dd>
                                @Html.DisplayFor(model => model.ItemCode)
                            </dd>
                        </dl>
                    </div>
                </div>
                <div class="row static-info">
                    <div class="col-md-5 name">
                        <dl>
                            <dt>
                                @Html.DisplayNameFor(model => model.IndentNo):
                            </dt>
                        </dl>
                    </div>
                    <div class="col-md-7 value">
                        <dl>
                            <dd>
                                @Html.DisplayFor(model => model.IndentNo)
                            </dd>
                        </dl>
                    </div>
                </div>
                <div class="row static-info">
                    <div class="col-md-5 name">
                        <dl>
                            <dt>
                                @Html.DisplayNameFor(model => model.SourceFund):
                            </dt>
                        </dl>
                    </div>
                    <div class="col-md-7 value">
                        <dl>
                            <dd>
                                @Html.DisplayFor(model => model.SourceFund)
                            </dd>
                        </dl>
                    </div>
                </div>
                <div class="row static-info">
                    <div class="col-md-5 name">
                        <dl>
                            <dt>
                                @Html.DisplayNameFor(model => model.Quantity):
                            </dt>
                        </dl>
                    </div>
                    <div class="col-md-7 value">
                        <dl>
                            <dd>
                                <ul>
                                    <li>
                                        @Html.Raw(Model.Quantity.Replace(",", "<br><li>"))
                                    </li>
                                </ul>
                                @*@Html.DisplayFor(model => model.Quantity)*@
                               
                            </dd>
                        </dl>
                    </div>
                </div>
                
              



                <div class="row static-info">
                    <div class="col-md-5 name">
                        <dl>
                            <dt>
                                @Html.DisplayNameFor(model => model.Status):
                            </dt>
                        </dl>
                    </div>
                    <div class="col-md-7 value">
                        @if (Model.Status == "Done")
                        {
                            <span class="label label-sm label-success" style="font-size:14px">
                                Done
                            </span>
                        }
                        @if (Model.Status == "Pending")
                        {
                            <span class="label label-sm label-info" style="font-size:14px">
                                Pending
                            </span>

                        }
                        @if (Model.Status == "Cancle")
                        {
                            <span class="label label-sm label-danger" style="font-size:14px">
                                Cancle
                            </span>

                        }
                        <dl></dl>
                    </div>
                </div>
                <div class="row static-info">
                    <div class="col-md-5 name">
                        <dl>
                            <dt>
                                @Html.DisplayNameFor(model => model.ReceivedDate):
                            </dt>
                        </dl>
                    </div>
                    <div class="col-md-7 value">
                        <dl>
                            <dd>
                                @Html.DisplayFor(model => model.ReceivedDate)
                            </dd>
                        </dl>
                    </div>
                </div>


            </div>


            <div class="page-footer">
                <div class="page-footer-inner">
                    2024 © Division of Cancer Care,Hospital Cancer Registries & Survival Studies, CCE.
                </div>
                <div class="scroll-to-top">
                    <i class="icon-arrow-up"></i>
                </div>
            </div>


        </div>
        <button style="float:right" id="download-pdf">Download PDF</button>

        <script>
        document.getElementById('download-pdf')
        .addEventListener('click', () => {
            const element = document.getElementById('content');
            const options = {
                filename: '"@Model.IndentNo".pdf',
                margin: 0.5,
                image: { type: 'jpeg', quality: 0.98 },
                html2canvas: { scale: 2 },
                jsPDF: {
                    unit: 'in',
                    format: 'A4',
                    orientation: 'portrait'
                }
            };

            html2pdf().set(options).from(element).save();
        });
        </script>
        <div class="actions">


            <b>  @Html.ActionLink("Back to List", "IndentList")</b>

        </div>

    </div>







